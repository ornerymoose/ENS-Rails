<%= form_for(@subscription) do |f| %>
    <% if @subscription.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>
            <ul>
                <% @subscription.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, :value => current_user.email, class: "form-control", :disabled => true %>
    </div>

    <div class="field">
        <%= f.label :phone_number %><br>
        <%= f.telephone_field :phone_number, class: "form-control telephone", :onkeypress => 'validate(event)', :placeholder => '10 Digit Phone Number' %>
    </div>

    <div class="field">
        <%= f.label :category_id %><br>
        <%= collection_check_boxes(:subscription, :category_ids, Category.all, :id, :name) do |b| %>
            <div class="row">
                <%= b.label(class: "check_box") do %>
                    <%= b.check_box(class: "check_box") %>    <%= b.object.name %>
                <% end %>
            </div>
        <% end %>
    </div>

    <div class="actions">
        <%= f.submit :class => "btn btn-default" %>
    </div>
<% end %>
