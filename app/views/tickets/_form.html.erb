<%#= @people.select {|user| user["categories"].include?("Southwest Residential")} %>
<%= form_for(@ticket) do |f| %>
    <% if @ticket.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>
            <ul>
                <% @ticket.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :property_id %><br>    
        <%#= hidden_field_tag "item", :category_ids %>
        <%= collection_select(:ticket, :property_ids, Property.all, :id, :property_name_and_address, {}, {:multiple => true, class: "form-control property-field"}) %>
    </div>

    <div class="form-group">
        <%= f.label :heat_ticket_number %>
        <%= f.text_field :heat_ticket_number, class: "form-control htn", :onkeypress => 'validate(event)', :placeholder => 'Minimum 8 Digits - this field is required' %> 
    </div>

    <div class="form-group">
        <%= f.label :bridge_number %><br>    
        <%= f.text_field :bridge_number, class: "form-control", :onkeypress => 'validate(event)', :placeholder => 'Enter Bridge Number if Applicable' %> 
    </div>

    <div class="form-group">
        <%= f.label :event_status %><br>
        <%= f.select(:event_status, ['Initial', 'Update', 'Stopped'], {}, {class: "form-control"}) %>
    </div>

    <div class="form-group">
        <%= f.label :event_category %><br>
        <%= f.select(:event_category, ['Early Warning','Informational','Simplex','Outage'], {}, {class: "form-control"}) %>
    </div>

    <div class="form-group">
        <%= f.label :event_severity %><br>
        <%= f.select(:event_severity, ['Low','Medium','High','Critical'], {}, {class: "form-control"}) %>
    </div>

    <div class="form-group">
        <%= f.label :customers_affected %><br>
        <%= f.text_field :customers_affected, class: "form-control", :placeholder => 'How many customers were affected?' %>
    </div>

    <div class="form-group">
        <%= f.label :problem_statement %><br>
        <%= f.text_area :problem_statement, class: "form-control problem_statement", :placeholder => 'Enter the problem statement here - this field is required' %>
    </div>

    <div class="form-group">
        <%= f.label :additional_notes %><br>
        <%= f.text_area :additional_notes, class: "form-control additional_notes", :placeholder => 'Enter any additional notes here - this field is required' %>
    </div>

    <p>
        <div class="actions">
            <%= f.submit :class => "btn btn-default ticket-submit" %>
        </div>        
    </p>


<% end %>
